/**
 * User Model
 */

import mongoose, { Schema, Document } from "mongoose";

export interface IUser extends Document {
  email: string;
  name: string;
  role: "admin" | "user";
}

const UserSchema = new Schema<IUser>(
  {
    email: { 
      type: String, 
      required: true, 
      unique: true,
      shield: {
        roles: ["admin", "user"],
      },
    },
    name: { 
      type: String, 
      required: true,
      shield: {
        roles: ["admin", "user"],
      },
    },
    role: { 
      type: String, 
      enum: ["admin", "user"], 
      default: "user",
      shield: {
        roles: ["admin"],
      },
    },
  },
  { timestamps: true }
);

export const User = mongoose.model<IUser>("User", UserSchema);
